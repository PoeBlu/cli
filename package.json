{
  "name": "@dadi/cli",
  "version": "1.0.0",
  "description": "A command-line tool for installation and customisation of the DADI platform",
  "main": "index.js",
  "bin": {
    "dadi": "bin/dadi.js"
  },
  "preferGlobal": "true",
  "keywords": [],
  "author": "eb@dadi.co",
  "license": "ISC",
  "dependencies": {
    "cli-format": "^3.0.9",
    "cli-table": "^0.3.1",
    "colors": "^1.1.2",
    "inquirer": "^3.2.0",
    "minimist": "^1.2.0",
    "mock-require": "^2.0.2",
    "ora": "^1.3.0",
    "registry-url": "^3.1.0",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "semver-compare-range": "0.0.3"
  },
  "devDependencies": {
    "istanbul-cobertura-badger": "^1.3.0",
    "jest": "^20.0.4",
    "nock": "^9.0.14",
    "pmock": "^0.2.3",
    "standard": "^10.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dadi/cli.git"
  },
  "bugs": {
    "url": "https://github.com/dadi/cli/issues"
  },
  "homepage": "https://github.com/dadi/cli",
  "scripts": {
    "test": "standard && jest && node test/utils/coverage.js",
    "test-dev": "jest --watch"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "bin/**/*.js",
      "entryPoints/**/*.js",
      "lib/**/*.js"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "testMatch": [
      "*/**/test/**/*.test.js"
    ],
    "moduleNameMapper": {
      "/Users/fakeuser/fakedir/node_modules/@dadi/api": "<rootDir>/test/helpers/MockDadiApi.js"
    }
  },
  "standard": {
    "ignore": [
      "test/**/*"
    ]
  }
}
